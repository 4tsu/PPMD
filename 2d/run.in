dimension 2
atom_style atomic
units lj
boundary p p p
timestep 0.0005

read_data droplet.atoms
# read_data bubble.atoms
# read_data decompression.atoms
# lattice fcc 0.65
# region region1 block 0 16 0 16 0 16 units lattice
# create_box 1 region1
# create_atoms 1 box

mass 1 1.0
pair_style lj/cut 3.5
pair_coeff 1 1 1.0 1.0 3.5

thermo_style custom step etotal temp vol
thermo 500

fix 1 all nvt temp 0.72 0.72 $(100.0*dt)

dump id all atom 500 result.dump
# dump id all custom 300000 liquid.dump x y z vx vy vz

variable energy equal etotal
variable temperature equal temp
variable volume equal vol
fix fout1 all ave/time 1 100 100 v_energy v_temperature v_volume file out.dat

run 80000
